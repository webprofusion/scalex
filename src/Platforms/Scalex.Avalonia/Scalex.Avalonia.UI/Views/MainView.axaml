<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Scalex.Avalonia.UI.ViewModels"
			 xmlns:controls="clr-namespace:Scalex.Avalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Scalex.Avalonia.UI.Views.MainView"
             Foreground="White"
             Background="#171C2C">
	<Design.DataContext>
		<viewModels:MainViewModel />
	</Design.DataContext>

	<StackPanel Margin="8">
		<ComboBox x:Name="scaleList"   SelectedIndex="0" SelectionChanged="ScaleList_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
       </ComboBox>
		<TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		<ScrollViewer HorizontalScrollBarVisibility="Auto">
			<controls:ScaleDiagram x:Name="scaleDiagram"></controls:ScaleDiagram>
		</ScrollViewer>
	</StackPanel>
</UserControl>
